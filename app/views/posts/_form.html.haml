= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field.title
    = f.label :title
    = f.text_field :title
  .field.body
    = f.label :body
    = f.text_field :body
  .field.author
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
